{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug app",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/app",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/src",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Habilita formatação para gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build app",
        "miDebuggerPath": "/usr/bin/gdb"
      }
    ]
  }
  